<% content = `
    <section>
        <div class="container">
            <div class="row">
                <h1 class="text-dark bg-light fw-bold mb-0 p-3">Cambiar Contraseña</h1>
            </div>
        </div>
        <div class="container">
            <form class="row formPlus g-sm-4 text-black fw-bold p-4" method="post" id="formSecurity">
                <div class="col-md-12">
                <label for="current-password" class="form-label">Contraseña actual: </label>
                <input type="password" class="form-control" id="current-password" name="currentPassword">
                </div>
                <div class="col-md-6">
                <label for="new-password" class="form-label">Nueva contraseña: </label>
                <input type="password" id="input-newpass" class="form-control" name="newPassword">
                </div>
                <div class="col-md-6">
                    <label for="repeat-new-password" class="form-label">Repetir contraseña: </label>
                    <input type="password"  class="form-control" id="repeat-new-password" name="repeatNewPassword">
                </div>
                <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary w-30 mt-5 border-5" id="buttonSubmit">Cambiar contraseña</button>
                </div>
            </form>
            <hr>
            <div>
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                    Datos personales
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">Nombre: ${nombre}</a>
                    <a href="#" class="list-group-item list-group-item-action">Apellido: ${apellido}</a>
                    <a href="#" class="list-group-item list-group-item-action">Email: ${email}</a>
                    <a href="#" class="list-group-item list-group-item-action">Cuenta creada el: ${accountCreated}</a>
                </div>
            </div>
        </div>
    </section>

    <script src="/js/dashboard-profile-security.js"></script>

`%>


<%- include('partials/template'); %>